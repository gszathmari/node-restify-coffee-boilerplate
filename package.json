{
  "name": "node-restify-coffee-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Restify APIs written in CoffeeScript",
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "rest",
    "api",
    "coffeescript"
  ],
  "author": {
    "name": "Gabor Szathmari",
